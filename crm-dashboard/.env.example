# API Connection
NEXT_PUBLIC_API_URL=http://localhost:8026

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3026
AUTH_SECRET=your_secret_here  # Generate: openssl rand -base64 32
AUTH_TRUST_HOST=true

